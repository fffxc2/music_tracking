= simple_form_for(@dance) do |f|
  - if @dance.errors.any?
    #error_explanation
      %h2
        = pluralize(@dance.errors.count, "error")
        prohibited this dance from being saved:
      %ul
        - @dance.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br
    = f.text_field :name
  .actions
    = f.submit
